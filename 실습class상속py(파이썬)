class Car:
    wheel = 4
    side_mirror = 2
    back_mirror = 1
    handle = 1

    def __init__(self,name='소나타 ',drv='전륜',speed=0,direction='앞쪽',fuel='휘발유',state='정상'):
        print('생성자 호출')
        self.name = name
        self.drv = drv
        self.speed = speed
        self.direction = direction
        self.fuel = fuel
        self.state = state

    def set_name(self,name):
        self.name = name
        print( '차종이 [', self.name ,'] 변경되었습니다')

    def get_name(self):
        return  self.name

    def set_drv(self, drv):
        self.drv = drv
        print('차의 구동 방식이 [', self.drv, '] 으로 변경 되었습니다')
    def get_drv(self):
        return self.drv

    def set_speed(self, speed):
        self.speed = speed
        print('자동차의 속력이 시속  [', self.speed, '] km 로 변경되었습니다')
    def get_speed(self):
        return self.speed

    def set_direction(self, direction):
        self.direction = direction
        print('차의 방향이 [', self.direction, '] 으로 변경 되었습니다')

    def get_direction(self):
        return self.direction

    def set_fuel(self, fuel):
        self.fuel = fuel
        print('설정된 연료 방식 [', self.fuel, '] 으로 변경되었습니다')
    def get_fuel(self):
        return self.fuel

    def set_state(self, state):
        self.state = state
        print('설정된 차의 상태 [', self.state, '] 으로 변경 되었습니다')
    def get_state(self):
        return self.state

    def turn(self):
        return ('자동차의 방향이  [', self.direction, '] 으로 변경 되었습니다')

    def stop(self):
        if self.direction == '정지':
            return ('자동차가 정지했습니다.')

    def start(self):
        return('자동차가 시동이 걸렸습니다.')

    def move_forward(self):
        return ('자동차가  [', self.direction,'] 합니다 속도는 [',self.speed,'] 입니다.')

    def move_backward(self):
        return ('자동차가  [', self.direction,'] 합니다 속도는 [',self.speed,'] 입니다.')



class Airplane(Car):

    def __init__(self, air_name = 'KAL147', air_height = 0, air_speed = 0, air_direction = '정지',air_state = '정상'):
        self.air_name = air_name
        self.air_height = air_height
        self.air_speed =air_speed
        self.air_direction = air_direction
        self.air_state = air_state

    def set_air_name(self,air_name):
        self.air_name = air_name
        print( "비행기 기종이 [ ",self.air_name , " ]로 변경 되었습니다" )

    def get_air_name(self):
        return  self.air_name

    def set_height(self,air_height):
        self.air_height = air_height
        print(  '비행 고도를 [' , self.air_height, '] km 로 설정하였습니다')

    def get_height(self):
        return self.air_height

    def land_to_ground(self):
        print('비행기가 착륙하였습니다.')

    def set_speed(self, air_speed):
        self.air_speed = air_speed
        print('비행기의 속력이 시속  [', self.air_speed, '] km 로 변경되었습니다')

    def get_speed(self):
        return self.air_speed

    def move_forward(self):
        return ('비행기가  [', self.air_direction, '] 합니다 속도는 [', self.air_speed, '] 입니다.')

    def move_backward(self):
        return ('비행기가  [', self.air_direction, '] 합니다 속도는 [', self.air_speed, '] 입니다.')


    def change_direction(self):
        while True:
            air_di_list = ['왼쪽', '오른쪽', '앞쪽', '뒤쪽', '정지', '위쪽', '아래쪽']
            a = input("방향 입력 = ")
            for x in air_di_list:
                if x != a:
                    break
                else:
                    return ('비행기가  [', a, ']으로 이동합니다 ')

Jinyoung = Airplane()
print(Jinyoung.air_name)
Jinyoung.set_air_name('전용기')
print(Jinyoung.air_name)
print(Jinyoung.change_direction())

