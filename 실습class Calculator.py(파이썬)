class Calculator:

    def __init__(self):
        self.dict = {1:'+',2:'-',3:'*',4:'/'}

    def calculator(self,first,di,second):
        self.first = first
        set = self.dict[di]
        self.second = second
        return eval(self.first + set + self.second)

class controlcalculator:
    def __init__(self):
        self.cal_dict=  Calculator()

    def Calculator(self,first, b, second):
        return self.cal_dict.calculator(first, b, second)

class ViewCalculator:
    def __init__(self):
        self.cCal = controlcalculator()

    def DisplayCalculator(self):
        result = int(input("수 : "))
        while True:
            b = int(input("연산(1: '+', 2: '-', 3: '*', 4: '/', 5: 'end'): "))
            if b >= 5 or b < 1:
                break
            c = input("수 : ")
            result = self.cCal.Calculator(str(result), b, c)
            print("결과:", result)



if __name__ == '__main__':
    viewCalculator = ViewCalculator()
    viewCalculator.DisplayCalculator()

