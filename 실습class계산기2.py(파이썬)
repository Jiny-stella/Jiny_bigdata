class Student:
    def __init__(self,name,total,total_mean,total_grade):
        self.name=name
        self.total=total
        self.total_mean=total_mean
        self.total_grade= total_grade

    def stu_name(self,name):
        self.name = name

    def list(self):
        addlist = []
        while True:
            a = int(input('숫자입력(0은 종료):'))
            b = addlist.append(a)
            print(b)
            if a == 0:
                break

    def add(self):
        return sum(self.addlist())

    def mean(self):
        return self.list() /len(self.list())

    def grade(self):
        if self.mean >89:
            print('A')

        elif self.mean > 79:
            print('B')

        elif self.mean > 69:
            print('C')

        elif self.mean > 59:
            print('D')


