
# print('{0:=^50}'.format('1번'))

num = list(range(1,101))
count = 0
for i in num:
    print(i, end = " ")
    count += 1

    if count == 10:     #질문!!!!!!!!!!
        print()
        count = 0
#
print('{0:=^50}'.format('1-1번'))

for i in range(1,101):
    print(i,end= " ")
    if i % 10 == 0:
        print()



